#!/usr/bin/ruby
# Emulates the Linux "seq" command

if ARGV[0] == '-w'
  startx = ARGV[1].to_i
  endx = ARGV[2].to_i
  pad_size = endx.to_s.size
  (startx..endx).to_a.each do |index|
    puts sprintf("%0#{pad_size}d",index)
  end
else
  startx = ARGV[0].to_i
  endx = ARGV[1].to_i
  (startx..endx).to_a.each do |index|
    puts sprintf("%d",index)
  end
end
